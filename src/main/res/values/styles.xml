<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2A3c58</item>
        <item name="colorPrimaryDark">#2A3c58</item>
        <item name="colorAccent">#2A3c58</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#192943</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#000000
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#000000
        </item>
    </style>

</resources>
