<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context=".RegisterationActivity">

    <TextView
        android:id="@+id/profileimage_registerationactivity_id"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:layout_marginTop="30sp"
        android:textAlignment="center"
        android:textSize="80sp"
        android:textColor="#2A3c58"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/circle"
        android:gravity="center_vertical" />
    <com.sarnava.textwriter.TextWriter
        android:id="@+id/textWriter"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileimage_registerationactivity_id"
        />

    <EditText
        android:id="@+id/username_registerationactivity_id"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/login_username_edittext"
        android:drawablePadding="10dp"
        app:layout_goneMarginBottom="30dp"
        android:hint="Username"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginBottom="30sp"
        app:layout_constraintTop_toBottomOf="@id/textWriter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/password_registerationactivity_id"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/edit_text"
        android:drawableLeft="@drawable/login_password_edittext"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/username_registerationactivity_id" />

    <Button
        android:id="@+id/signupbtn_registerationactivity_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_button"
        android:layout_marginTop="25sp"
        android:text="Sign Up"
        android:textColor="#2A3c58"
        android:textSize="20sp"
        android:layout_marginRight="90sp"
        android:layout_marginLeft="90sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_registerationactivity_id" />

</androidx.constraintlayout.widget.ConstraintLayout>