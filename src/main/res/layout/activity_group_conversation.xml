<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/mainbackground"
    tools:context=".Activites.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="380sp"
        android:id="@+id/groupconversation_id"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/groupconversation"

        />


    <EditText
        android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type group subject here..."
        android:inputType="text"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30sp"
        android:textColorHint="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/groupconversation_id"
        android:textSize="19sp" />

    <Button
        android:id="@+id/add_to_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        android:text="Add"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#860014"
        android:textColorHint="#860014"
        android:textColorLink="#860014"
        android:textSize="20sp"
        android:background="@drawable/edit_button"
        app:layout_constraintTop_toBottomOf="@id/group_name"/>

</LinearLayout>